---
import "../styles/global.css";
import type { CollectionEntry } from "astro:content";
import "@fontsource/geist-sans";
import SEO from "../components/SEO.astro";
import Header from "../components/Header";
import { mockData3 } from "../../data/MockData";

type Props = CollectionEntry<"tech-world">["data"];
interface Props2 {
	title: string;
	description: string;
	canonical?: string;
	// image?: string;
}

const { title, description, canonical } = Astro.props as Props2;
const { header, hero } = mockData3;
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			canonical={canonical}
			description={description}
			image={"/favicon.svg"}
			title={title}
		/>
	</head>
	<body class="relative text-black">
		<div
			class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-white"
		>
		</div>

		<slot />
		<!-- <Footer /> -->
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;
	}

	html {
		font-family: "Geist Sans", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		color: rgba(255, 255, 255, 0.992);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
	}
	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
	@media (prefers-color-scheme: light) {
		body {
			color: rgb(255, 255, 255);
		}
	}
</style>
